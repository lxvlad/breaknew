<Window x:Class="BreakFree.Presentation.Views.SosTipsView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="BreakFree - SOS Поради" Height="550" Width="450"
        WindowStartupLocation="CenterScreen" Background="#F5F5F5">
    <Window.Resources>
        <Style TargetType="Button" x:Key="SecondaryButton" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Background" Value="#9E9E9E"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>
        <Style TargetType="Border" x:Key="TipBorder">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="LightGray"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="5"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="0,5"/>
        </Style>
        <Style TargetType="TextBlock" x:Key="TipText">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Що робити при кризі" FontSize="22" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20" Foreground="#333"/>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="0,0,0,20">
            <StackPanel x:Name="TipsPanel">
                <Border Style="{StaticResource TipBorder}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Зроби 10 присідань або віджимань" Style="{StaticResource TipText}"/>
                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                            <Button Content="✓"
                    Background="LightGray"
                    Width="30"
                    Margin="5,0"
                    Tag="Зроби 10 присідань або віджимань"
                    Click="TipWorked_Click"/>
                            <Button Content="X"
                    Background="LightGray"
                    Width="30"
                    Tag="Зроби 10 присідань або віджимань"
                    Click="TipNotWorked_Click"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- 2. Прийми холодний душ -->
                <Border Style="{StaticResource TipBorder}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Прийми холодний душ" Style="{StaticResource TipText}"/>
                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                            <Button Content="✓"
                    Background="LightGray"
                    Width="30"
                    Margin="5,0"
                    Tag="Прийми холодний душ"
                    Click="TipWorked_Click"/>
                            <Button Content="X"
                    Background="LightGray"
                    Width="30"
                    Tag="Прийми холодний душ"
                    Click="TipNotWorked_Click"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- 3. Подзвони другу або близькій людині -->
                <Border Style="{StaticResource TipBorder}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Подзвони другу або близькій людині" Style="{StaticResource TipText}"/>
                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                            <Button Content="✓"
                    Background="LightGray"
                    Width="30"
                    Margin="5,0"
                    Tag="Подзвони другу або близькій людині"
                    Click="TipWorked_Click"/>
                            <Button Content="X"
                    Background="LightGray"
                    Width="30"
                    Tag="Подзвони другу або близькій людині"
                    Click="TipNotWorked_Click"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- 4. Випий склянку холодної води -->
                <Border Style="{StaticResource TipBorder}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Випий склянку холодної води" Style="{StaticResource TipText}"/>
                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                            <Button Content="✓"
                    Background="LightGray"
                    Width="30"
                    Margin="5,0"
                    Tag="Випий склянку холодної води"
                    Click="TipWorked_Click"/>
                            <Button Content="X"
                    Background="LightGray"
                    Width="30"
                    Tag="Випий склянку холодної води"
                    Click="TipNotWorked_Click"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- 5. Запиши свої почуття в нотатки -->
                <Border Style="{StaticResource TipBorder}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Запиши свої почуття в нотатки" Style="{StaticResource TipText}"/>
                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                            <Button Content="✓"
                    Background="LightGray"
                    Width="30"
                    Margin="5,0"
                    Tag="Запиши свої почуття в нотатки"
                    Click="TipWorked_Click"/>
                            <Button Content="X"
                    Background="LightGray"
                    Width="30"
                    Tag="Запиши свої почуття в нотатки"
                    Click="TipNotWorked_Click"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- 6. Переглянь свій прогрес у календарі -->
                <Border Style="{StaticResource TipBorder}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Переглянь свій прогрес у календарі" Style="{StaticResource TipText}"/>
                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                            <Button Content="✓"
                    Background="LightGray"
                    Width="30"
                    Margin="5,0"
                    Tag="Переглянь свій прогрес у календарі"
                    Click="TipWorked_Click"/>
                            <Button Content="X"
                    Background="LightGray"
                    Width="30"
                    Tag="Переглянь свій прогрес у календарі"
                    Click="TipNotWorked_Click"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- 7. Послухай улюблену музику -->
                <Border Style="{StaticResource TipBorder}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Послухай улюблену музику" Style="{StaticResource TipText}"/>
                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                            <Button Content="✓"
                    Background="LightGray"
                    Width="30"
                    Margin="5,0"
                    Tag="Послухай улюблену музику"
                    Click="TipWorked_Click"/>
                            <Button Content="X"
                    Background="LightGray"
                    Width="30"
                    Tag="Послухай улюблену музику"
                    Click="TipNotWorked_Click"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <Button Grid.Row="2" Content="Закрити" x:Name="CloseButton" Style="{StaticResource SecondaryButton}" Height="40" Width="150" HorizontalAlignment="Center" Click="CloseButton_Click"/>
    </Grid>
</Window>