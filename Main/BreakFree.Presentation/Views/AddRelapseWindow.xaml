<Window x:Class="BreakFree.Presentation.Views.AddRelapseWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="BreakFree - Додати зрив" Height="500" Width="400"
        WindowStartupLocation="CenterScreen" Background="#F5F5F5">
    <Window.Resources>
        <Style TargetType="Button" x:Key="PrimaryButton" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Background" Value="#E57373"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>
        <Style TargetType="Button" x:Key="SecondaryButton" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Background" Value="#9E9E9E"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>
    </Window.Resources>
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="320">
            <TextBlock Text="Додай запис про зрив" FontSize="22" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,30" Foreground="#333"/>
            <TextBlock Text="Дата/час:" FontSize="14" Margin="0,0,0,5"/>
            <DatePicker x:Name="DateTimePicker" Height="30" Padding="5" Margin="0,0,0,15"/>
            <TextBlock Text="Причина/тригер:" FontSize="14" Margin="0,0,0,5"/>
            <ComboBox x:Name="TriggerComboBox" Height="30" Padding="5" Margin="0,0,0,15">
                <ComboBoxItem Content="Стрес"/>
                <ComboBoxItem Content="Компанія"/>
                <ComboBoxItem Content="Нудьга"/>
                <ComboBoxItem Content="Інше"/>
            </ComboBox>
            <TextBlock Text="Нотатка:" FontSize="14" Margin="0,0,0,5"/>
            <TextBox x:Name="NoteTextBox" Height="60" Padding="5" Margin="0,0,0,15" TextWrapping="Wrap" AcceptsReturn="True"/>
            <TextBlock Text="Інтенсивність тяги:" FontSize="14" Margin="0,0,0,5"/>
            <Slider x:Name="IntensitySlider" Minimum="1" Maximum="10" IsSnapToTickEnabled="True" TickFrequency="1" Margin="0,0,0,25"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Зберегти" x:Name="SaveButton" Style="{StaticResource PrimaryButton}" Height="40" Width="150" Margin="0,0,10,0" Click="SaveButton_Click"/>
                <Button Content="Скасувати" x:Name="CancelButton" Style="{StaticResource SecondaryButton}" Height="40" Width="150" Click="CancelButton_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>