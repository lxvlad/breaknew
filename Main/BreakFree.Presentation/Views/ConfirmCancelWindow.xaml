<Window x:Class="BreakFree.Presentation.Views.ConfirmCancelWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="BreakFree - Підтвердження" Height="200" Width="400"
        WindowStartupLocation="CenterScreen" Background="#F5F5F5" WindowStyle="ToolWindow">
    <Window.Resources>
        <Style TargetType="Button" x:Key="PrimaryButton" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Background" Value="#E57373"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>
        <Style TargetType="Button" x:Key="SecondaryButton" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Background" Value="#9E9E9E"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>
    </Window.Resources>
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">

            <TextBlock Text="Скасувати зміни?" FontSize="18" FontWeight="SemiBold" HorizontalAlignment="Center" Margin="0,0,0,30" Foreground="#333"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">

                <Button Content="Скасувати зміни" x:Name="DiscardButton" Style="{StaticResource SecondaryButton}" Height="40" Margin="0,0,10,0" Click="DiscardButton_Click"/>

                <Button Content="Продовжити редагування" x:Name="ContinueButton" Style="{StaticResource PrimaryButton}" Height="40" Click="ContinueButton_Click"/>

            </StackPanel>

        </StackPanel>
    </Grid>
</Window>