<Window x:Class="BreakFree.Presentation.Views.ProfileWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="BreakFree – Керування профілем"
        Height="500" Width="450"
        Background="White"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="40">

        <!-- ===== Заголовок ===== -->
        <TextBlock Text="Керування профілем"
                   FontSize="30"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,40"/>

        <!-- ===== Основна форма ===== -->
        <Grid VerticalAlignment="Center">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>

            <!-- Ім’я -->
            <TextBlock Text="Ім'я:" 
                       Grid.Row="0" Grid.Column="0"
                       FontSize="16"
                       FontWeight="SemiBold"
                       VerticalAlignment="Center"
                       Margin="0,0,10,15"/>
            <TextBox x:Name="txtUsername" 
                     Grid.Row="0" Grid.Column="1"
                     Height="30"
                     BorderBrush="#ccc"
                     FontSize="14"
                     Margin="0,0,0,15"/>

            <!-- Email -->
            <TextBlock Text="Email:" 
                       Grid.Row="1" Grid.Column="0"
                       FontSize="16"
                       FontWeight="SemiBold"
                       VerticalAlignment="Center"
                       Margin="0,0,10,15"/>
            <TextBox x:Name="txtEmail"
                     Grid.Row="1" Grid.Column="1"
                     Height="30"
                     BorderBrush="#ccc"
                     FontSize="14"
                     Margin="0,0,0,15"/>

            <!-- Дата старту звички -->
            <TextBlock Text="Дата старту звички:" 
                       Grid.Row="2" Grid.Column="0"
                       FontSize="16"
                       FontWeight="SemiBold"
                       VerticalAlignment="Center"
                       Margin="0,0,-5,15"/>
            <TextBlock Text="01/10/2025"
                       Grid.Row="2" Grid.Column="1"
                       FontSize="15"
                       VerticalAlignment="Center"
                       Margin="10,0,0,15"/>

            <!-- Безпека -->
            <TextBlock Text="Безпека"
                       Grid.Row="3" Grid.ColumnSpan="2"
                       FontSize="18"
                       FontWeight="SemiBold"
                       HorizontalAlignment="Center"
                       Margin="0,30,0,20"/>
        </Grid>

        <!-- ===== Кнопки безпеки ===== -->
        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Margin="0,220,0,0">

            <Button Content="Змінити пароль"
                    Width="160" Height="40"
                    Background="#999"
                    Foreground="White"
                    FontSize="15"
                    FontWeight="SemiBold"
                    Margin="0,0,40,0"
                    Click="ChangePasswordButton_Click"/>

            <Button Content="Видалити профіль"
                    Width="160" Height="40"
                    Background="#999"
                    Foreground="White"
                    FontSize="15"
                    FontWeight="SemiBold"
                    Click="DeleteProfileButton_Click"/>
        </StackPanel>

        <!-- ===== Кнопки дій ===== -->
        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Bottom"
                    Margin="0,0,0,10">

            <Button Content="Зберегти зміни"
                    Width="160" Height="40"
                    Background="#FF5C4D"
                    Foreground="White"
                    FontSize="16"
                    FontWeight="SemiBold"
                    Margin="0,0,40,0"
                    Click="SaveChangesButton_Click"/>

            <Button Content="Скасувати"
                    Width="160" Height="40"
                    Background="#999"
                    Foreground="White"
                    FontSize="16"
                    FontWeight="SemiBold"
                    Click="CancelButton_Click"/>
        </StackPanel>

    </Grid>
</Window>
