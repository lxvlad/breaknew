<Window x:Class="BreakFree.Presentation.Views.DeleteProfileWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="BreakFree – Видалити профіль"
        Height="290" Width="490"
        Background="White"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="40">

        <!-- ===== Заголовок ===== -->
        <TextBlock Text="Видалити профіль та всі дані"
                   FontSize="26"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,40"/>

        <!-- ===== Форма ===== -->
        <Grid VerticalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="Введіть пароль:" 
                       Grid.Column="0"
                       FontSize="16" FontWeight="SemiBold"
                       VerticalAlignment="Center"
                       Margin="0,0,10,0"/>
            <PasswordBox x:Name="txtPassword"
                Grid.Column="1"
                Height="30" BorderBrush="#ccc"/>
        </Grid>

        <!-- ===== Кнопки ===== -->
        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Bottom"
                    Margin="0,0,0,0">
            <Button Content="Видалити"
                    Width="130" Height="40"
                    Background="#FF5C4D"
                    Foreground="White"
                    FontSize="16"
                    FontWeight="SemiBold"
                    Margin="0,0,140,0"
                    Click="DeleteProfileButton_Click"/>
            <Button Content="Скасувати"
                    Width="130" Height="40"
                    Background="#999"
                    Foreground="White"
                    FontSize="16"
                    FontWeight="SemiBold"
                    Click="CancelButton_Click"/>
        </StackPanel>

    </Grid>
</Window>

