<Window x:Class="BreakFree.Presentation.Views.Dashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="BreakFree – Мій прогрес"
        Height="650" Width="650"
        Background="White"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <!-- ===== Головна структура ===== -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <!-- Меню -->
            <ColumnDefinition Width="*"/>
            <!-- Контент -->
        </Grid.ColumnDefinitions>

        <!-- ===== Бокове меню ===== -->
        <StackPanel Background="#555" Width="70" VerticalAlignment="Stretch">
            <!-- Кнопка розгортання меню -->
            

            <!-- Навігаційні іконки -->
            <StackPanel>
                <Button Content="📅" ToolTip="Календар" Background="Transparent" Foreground="White"
                        FontSize="22" BorderThickness="0" Margin="0,5" Click="CalendarButton_Click"/>
                <Button Content="📊" ToolTip="Статистика" Background="Transparent" Foreground="White"
                        FontSize="22" BorderThickness="0" Margin="0,5" Click="StatisticButton_Click"/>
                <Button Content="🤝" ToolTip="Мотивація" Background="Transparent" Foreground="White"
                        FontSize="22" BorderThickness="0" Margin="0,5"/>
                <Button Content="💬" ToolTip="Підтримка" Background="Transparent" Foreground="White"
                        FontSize="22" BorderThickness="0" Margin="0,5" Click="SupportButton_Click"/>
            </StackPanel>

            <StackPanel VerticalAlignment="Bottom" Margin="0,0,0,20">
				<Button Content="ℹ️" ToolTip="Про BreakFree"
                    Background="Transparent"
                    Foreground="White"
                    FontSize="22"
                    BorderThickness="0"
                    Margin="0,5"
                    Click="AboutButton_Click"/>
            </StackPanel>
        </StackPanel>

        <!-- ===== Основний контент ===== -->
        <Grid Grid.Column="1" Margin="30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- ===== Верхня панель ===== -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <TextBlock Text="Прогрес"
                           FontSize="35"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Top"
                           Margin="40,0,0,20"/>

                <!-- Іконка профілю -->
                <Button Grid.Column="1"
                        Width="40" Height="40"
                        Background="#999"
                        Foreground="White"
                        Content="👤"
                        FontSize="20"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        ToolTip="Профіль"
                        Click="OpenProfileButton_Click"/>
            </Grid>

            <!-- ===== Лічильники ===== -->
            <Grid Grid.Row="1" Margin="0,20,0,40" HorizontalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="30"/>
                    <!-- коротша лінія -->
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Всього -->
                <StackPanel Grid.Column="0" HorizontalAlignment="Center" Margin="0,0,100,0">
                    <TextBlock Text="Всього"
                               FontStyle="Italic"
                               FontSize="16"
                               FontWeight="SemiBold"
                               HorizontalAlignment="Center"
                               Margin="0,0,18,0"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock Text="26" FontSize="36" FontWeight="Bold" Margin="0,0,3,0"/>
                        <TextBlock Text="днів" FontSize="14" VerticalAlignment="Bottom" Foreground="Gray"/>
                    </StackPanel>
                </StackPanel>

                <!-- Вертикальна лінія -->
                <Border Width="2" Height="100" Background="#222" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="144,0,35,295"/>

                <!-- Серія -->
                <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                    <TextBlock Text="Серія"
                               FontStyle="Italic"
                               FontSize="16"
                               FontWeight="SemiBold"
                               HorizontalAlignment="Center"
                               Margin="0,0,30,0"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock Text="19" FontSize="36" FontWeight="Bold" Margin="0,0,3,0"/>
                        <TextBlock Text="днів" FontSize="14" VerticalAlignment="Bottom" Foreground="Gray"/>
                    </StackPanel>
                </StackPanel>
            </Grid>

                        <!-- ===== Таблиця звичок ===== -->
            <StackPanel Grid.Row="1" VerticalAlignment="Center">
                <TextBlock Text="Звички"
                        FontSize="18"
                        FontStyle="Italic"
                        FontWeight="SemiBold"
                        HorizontalAlignment="Center"
                        Margin="0,120,0,10"/>

                <Border BorderBrush="#ccc" BorderThickness="1" Padding="15" CornerRadius="5">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Margin="0,0,10,0">
                            <TextBlock Text="Назва:" FontWeight="Bold" FontSize="14"/>
                            <TextBlock x:Name="HabitNameText" Margin="0,0,0,8"/>

                            <TextBlock Text="Дата старту:" FontWeight="Bold" FontSize="14"/>
                            <TextBlock x:Name="StartDateText" Margin="0,0,0,8"/>

                            <TextBlock Text="Статус:" FontWeight="Bold" FontSize="14"/>
                            <TextBlock x:Name="StatusText"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1">
                            <TextBlock Text="Мотивація:" FontWeight="Bold" FontSize="14"/>
                            <TextBlock x:Name="MotivationText"
                                    TextWrapping="Wrap"
                                    Margin="0,0,0,8"/>

                            <TextBlock Text="Зекономлено:" FontWeight="Bold" FontSize="14"/>
                            <TextBlock x:Name="MoneySavedText"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Стрілочки (кнопки) -->
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            Margin="0,20,0,20">

                    <Button Content="⟨"
                            Width="40" Height="40"
                            Background="Transparent"
                            Foreground="#333"
                            FontSize="22"
                            BorderBrush="#999"
                            BorderThickness="1"
                            Cursor="Hand"
                            Margin="0,0,40,0"
                            Click="PreviousHabit_Click"/>

                    <Button Content="⟩"
                            Width="40" Height="40"
                            Background="Transparent"
                            Foreground="#333"
                            FontSize="22"
                            BorderBrush="#999"
                            BorderThickness="1"
                            Cursor="Hand"
                            Click="NextHabit_Click"/>
                </StackPanel>
            </StackPanel>


            <!-- ===== Кнопки ===== -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
                <Button Content="Додати звичку"
                        Width="140" Height="40"
                        Background="#999"
                        Foreground="White"
                        Margin="0,0,40,0"
                        Click="AddHabitButton_Click"/>
                <Button Content="SOS-поради"
                        Width="140" Height="40"
                        Background="#999"
                        Foreground="White"
                        Margin="0,0,40,0"
                        Click="SosButton_Click"/>
                <Button Content="Додати зрив"
                        Width="140" Height="40"
                        Background="#999"
                        Foreground="White"
                        Click="AddRelapseButton_Click"/>

            </StackPanel>
        </Grid>
    </Grid>
</Window>

