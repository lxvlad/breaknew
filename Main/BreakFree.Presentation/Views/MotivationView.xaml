<Window x:Class="BreakFree.Presentation.Views.MotivationView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="BreakFree - Мотивація" Height="450" Width="400"
        WindowStartupLocation="CenterScreen" Background="#F5F5F5">
    <Window.Resources>
        <Style TargetType="Button" x:Key="PrimaryButton" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Background" Value="#E57373"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>

        <Style TargetType="Button" x:Key="SecondaryButton" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Background" Value="#9E9E9E"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
    </Window.Resources>

    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="340">
        <TextBlock Text="Знайдіть підтримку" FontSize="22" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,30" Foreground="#333"/>
        <Border Background="White" BorderBrush="LightGray" BorderThickness="1" CornerRadius="5" Padding="15" Margin="0,0,0,20">
            <StackPanel>
                <TextBlock Text="Цитата дня" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,10"/>
                <TextBlock Text="Кожен день без звички — це перемога над собою вчорашнім. Ти вже сильніший, ніж думаєш." TextWrapping="Wrap" FontStyle="Italic" Foreground="#444"/>
            </StackPanel>
        </Border>
        <Border Background="White" BorderBrush="LightGray" BorderThickness="1" CornerRadius="5" Padding="15" Margin="0,0,0,30">
            <StackPanel>
                <TextBlock Text="Зекономлено коштів" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,10"/>
                <TextBlock Text="2450 ₴" FontSize="28" FontWeight="Bold" Foreground="DarkGreen" HorizontalAlignment="Center"/>
                <TextBlock Text="за 35 днів без звички" HorizontalAlignment="Center" Foreground="Gray"/>
            </StackPanel>
        </Border>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0" x:Name="ShowSosButton" 
                    Style="{StaticResource PrimaryButton}" 
                    Height="50" Margin="5" 
                    Click="SosButton_Click">
                <TextBlock Text="Дивитися SOS-поради" 
                           TextWrapping="Wrap" 
                           TextAlignment="Center"/>
            </Button>

            <Button Grid.Column="1" Content="Скасувати" x:Name="CancelButton" 
                    Style="{StaticResource SecondaryButton}" 
                    Height="50" Margin="5" 
                    Click="CancelButton_Click"/>
        </Grid>

    </StackPanel>
</Window>